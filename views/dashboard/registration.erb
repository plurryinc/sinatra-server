<div class="container-fluid">
  <!-- Page Heading -->
  <!-- row -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Product Registration <small>For Purchaser</small>
      </h1>
      <form class="product-registration-form" method="post" action="/dashboard/registration">
        <div class="field">
          <label>이름 짓기</label>
          <input type="text" name="group" placeholder="제품의 이름을 지어주세요..." required>
        </div>
        <div class="products">
          <div class="field">
            <label>스마트폰 부분</label>
            <input type="text" name="products[]" placeholder="스마트폰의 코드를 입력..." AUTOCOMPLETE=OFF>
          </div>
          <div class="field">
            <label>밥통 부분</label>
            <input type="text" name="products[]" placeholder="밥통의 코드를 입력..." AUTOCOMPLETE=OFF>
          </div>
          <div class="field">
            <label>구동부(바퀴) 부분</label>
            <input type="text" name="products[]" placeholder="구동부의 코드를 입력..." AUTOCOMPLETE=OFF>
          </div>
        </div>
        <div class="field">
          <input type="submit" value="등록하기">
        </div>
      </form>
    </div>
  </div>
</div>
